# Custom Memory Allocator Makefile
# Compiler and flags
CXX = clang++
CXXFLAGS = -std=c++17 -Wall -Wextra -O2 -g -I/opt/homebrew/include
TARGET = memory_allocator
TEST_TARGET = unit_tests
SRCDIR = src
TESTDIR = test
SOURCES = $(SRCDIR)/main.cpp $(SRCDIR)/memory_allocator.cpp
TEST_SOURCES = $(TESTDIR)/unit_tests.cpp $(SRCDIR)/memory_allocator.cpp
SIMPLE_TEST_SOURCES = $(TESTDIR)/simple_tests.cpp $(SRCDIR)/memory_allocator.cpp
OBJECTS = $(SOURCES:.cpp=.o)
TEST_OBJECTS = $(TEST_SOURCES:.cpp=.o)
SIMPLE_TEST_OBJECTS = $(SIMPLE_TEST_SOURCES:.cpp=.o)

# Google Test flags (uncomment if you have Google Test installed)
GTEST_LIBS = -lgtest -lgtest_main -lpthread -L/opt/homebrew/lib

# Default target
all: $(TARGET)

# Build the executable
$(TARGET): $(OBJECTS)
	$(CXX) $(CXXFLAGS) -o $@ $^

# Build the test executable
$(TEST_TARGET): $(TEST_OBJECTS)
	$(CXX) $(CXXFLAGS) -o $@ $^ $(GTEST_LIBS)

# Build the simple test executable
simple_tests: $(SIMPLE_TEST_OBJECTS)
	$(CXX) $(CXXFLAGS) -o $@ $^

# Compile source files
%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

# Clean build artifacts
clean:
	rm -f $(OBJECTS) $(TEST_OBJECTS) $(SIMPLE_TEST_OBJECTS) $(TARGET) $(TEST_TARGET) simple_tests

# Run the program
run: $(TARGET)
	./$(TARGET)

# Test with sample input
test: $(TARGET)
	@echo "Running test cases..."
	@echo "alloc 1024" | ./$(TARGET) || true
	@echo "stats" | ./$(TARGET) || true

# Run unit tests (requires Google Test)
unit-test: $(TEST_TARGET)
	@echo "Running unit tests..."
	./$(TEST_TARGET)

# Run simple tests (no external dependencies)
simple-test: simple_tests
	@echo "Running simple tests..."
	./simple_tests

# Build and run unit tests
test-all: simple-test

# Install (copy to /usr/local/bin)
install: $(TARGET)
	sudo cp $(TARGET) /usr/local/bin/

# Uninstall
uninstall:
	sudo rm -f /usr/local/bin/$(TARGET)

# Show help
help:
	@echo "Available targets:"
	@echo "  all       - Build the memory allocator (default)"
	@echo "  clean     - Remove build artifacts"
	@echo "  run       - Build and run the program"
	@echo "  test      - Run basic tests"
	@echo "  unit-test - Build and run unit tests (requires Google Test)"
	@echo "  simple-test - Build and run simple tests (no dependencies)"
	@echo "  test-all  - Run all tests"
	@echo "  install   - Install to /usr/local/bin"
	@echo "  uninstall - Remove from /usr/local/bin"
	@echo "  help      - Show this help message"

.PHONY: all clean run test install uninstall help
